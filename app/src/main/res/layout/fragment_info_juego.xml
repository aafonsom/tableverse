<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.InfoJuego">

    <ImageView
        android:id="@+id/infojuego_imagen"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/icono_redondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infojuego_nombre"
        style="@style/OpenSansTextViewStyle.VeryBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infojuego_imagen" />

    <TextView
        android:id="@+id/infojuego_categoria"
        style="@style/OpenSansTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/infojuego_nombre"
        app:layout_constraintStart_toStartOf="@+id/infojuego_nombre"
        app:layout_constraintTop_toBottomOf="@+id/infojuego_nombre" />

    <TextView
        android:id="@+id/infojuego_dinero"
        style="@style/OpenSansTextViewStyle.VeryBig.Dinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/infojuego_categoria"
        app:layout_constraintStart_toStartOf="@+id/infojuego_categoria"
        app:layout_constraintTop_toBottomOf="@+id/infojuego_categoria" />
</androidx.constraintlayout.widget.ConstraintLayout>