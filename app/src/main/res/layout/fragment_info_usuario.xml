<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.InfoUsuario">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_foto_usuario"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/person_24px"
        android:tint="@color/colorPrimary"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nombre"
        style="@style/OpenSansTextViewStyle.VeryBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/iv_foto_usuario"
        app:layout_constraintStart_toStartOf="@+id/iv_foto_usuario"
        app:layout_constraintTop_toBottomOf="@+id/iv_foto_usuario" />

    <TextView
        android:id="@+id/tv_email"
        style="@style/OpenSansTextViewStyle.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre" />

</androidx.constraintlayout.widget.ConstraintLayout>