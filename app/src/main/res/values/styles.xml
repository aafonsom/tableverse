<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/OpenSansTextViewStyle</item>
        <!--<item name="android:buttonStyle">@style/RobotoButtonStyle</item>-->
        <item name="android:toolbarStyle">@style/AppTheme.PopupOverlay.RobotoToolbarStyle</item>
        <item name="android:editTextStyle">@style/OpenSansEditTextStyle</item>
        <!--<item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>-->
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/cardview_shadow_start_color</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textViewStyle">@style/OpenSansTextViewStyle</item>
        <!--<item name="android:buttonStyle">@style/RobotoButtonStyle</item>-->
        <item name="android:toolbarStyle">@style/AppTheme.PopupOverlay.RobotoToolbarStyle</item>
        <item name="android:editTextStyle">@style/OpenSansEditTextStyle</item>
        <!--<item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>-->
    </style>

    <!--Modificar completamente, aÃ±adir temas de titulo etc.-->
    <!--<style name="DatePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:buttonStyle">@style/RobotoButtonStyleDialog</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>-->

    <style name="OpenSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenSansTextViewStyle.Big">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="OpenSansTextViewStyle.VeryBig">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="OpenSansEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ConstraintBackGround" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="tvConfiguracionCabecera" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tvConfiguracionCabeceraBig" parent="tvConfiguracionCabecera">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SwitchConfiguracion" parent="AppTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.PopupOverlay.RobotoToolbarStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>



</resources>